<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_0e0e1a"
    android:orientation="vertical">

    <com.yanzhenjie.sofia.StatusView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_main" />

    <include layout="@layout/include_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bg_main"
        android:layout_marginTop="8dp"
        >
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/pay_logo"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:text="支付宝"
            android:layout_marginLeft="10dp"
            />
        <EditText
            android:id="@+id/pay_accout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:background="@android:color/transparent"
            android:hint="请输入支付宝账号"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/font_cccccc"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:textSize="@dimen/sp_12"
        android:gravity="center|left"
        android:textColor="@color/font_78788E"
        android:layout_gravity="center_vertical"
        android:text="请绑定持卡人本人的银行卡"
        android:layout_marginLeft="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bg_main"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:text="银行名称"
            android:layout_marginLeft="20dp"
            />
        <EditText
            android:id="@+id/bank_name"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:background="@android:color/transparent"
            android:hint="请输入银行名称"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/font_cccccc"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/line_3C3C5C" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/bg_main"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:text="持卡人"
            android:layout_marginLeft="20dp"
            />
        <EditText
            android:id="@+id/card_name"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:background="@android:color/transparent"
            android:hint="请输入持卡人姓名"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/font_cccccc"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/line_3C3C5C" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bg_main"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:text="卡号"
            android:layout_marginLeft="20dp"
            />
        <EditText
            android:id="@+id/card_number"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:hint="请输入银行卡账号"
            android:inputType="number"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/font_cccccc"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/line_3C3C5C" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bg_main"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:text="手机号"
            android:layout_marginLeft="20dp"
            />
        <EditText
            android:id="@+id/bank_phone"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:background="@android:color/transparent"
            android:hint="请输入银行预留的手机号"
            android:inputType="phone"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/font_cccccc"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>

    <TextView
        android:id="@+id/pwd_ok"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/radius_fc4288_7"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="50dp"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/white"
        android:text="保存"
        android:gravity="center"
        />
</LinearLayout>

