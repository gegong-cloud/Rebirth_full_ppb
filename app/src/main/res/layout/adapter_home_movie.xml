<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_0e0e1a"
    >
    <com.google.android.mvp.ui.widget.SelectableRoundedImageView
        android:id="@+id/movie_img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:sriv_left_bottom_corner_radius="5dp"
        app:sriv_left_top_corner_radius="5dp"
        app:sriv_right_bottom_corner_radius="5dp"
        app:sriv_right_top_corner_radius="5dp"
        android:scaleType="centerCrop"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/cloud_default_img"
        />
    <ImageView
        android:visibility="gone"
        android:id="@+id/my_favor"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="2dp"
        android:layout_marginRight="12dp"
        android:src="@drawable/favor_nopress"
        android:scaleType="centerInside"
        />
    <TextView
        android:id="@+id/movie_play_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/movie_play_bg"
        android:layout_alignRight="@+id/movie_img"
        android:layout_alignBottom="@+id/movie_img"
        android:textSize="@dimen/sp_12"
        android:paddingRight="10dp"
        android:textColor="@color/font_262626"
        android:gravity="center|right"
        android:text="8.2万次播放"
        />
    <TextView
        android:id="@+id/movie_title"
        android:layout_below="@+id/movie_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/movie_time"
        android:layout_below="@+id/movie_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="4dp"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/font_999999"
        android:text="2018/12/08  户外"
        />
    <View
        android:layout_below="@+id/movie_time"
        android:layout_width="match_parent"
        android:layout_height="18dp"/>
</RelativeLayout>