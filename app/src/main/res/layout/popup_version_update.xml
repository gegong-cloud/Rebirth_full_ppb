<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="290dp"
    android:layout_height="wrap_content"
    android:background="@drawable/radius_ffffff_8"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/radius_fc4288_top_8"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/white"
            android:text="提示信息"
            />
        <ImageView
            android:visibility="gone"
            android:id="@+id/online_close"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:src="@drawable/white_close"
            android:scaleType="centerInside"
            />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/font_333333"
        android:text="有新版本需要更新"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center|left"
        android:lineSpacingExtra="2dp"
        />
    <TextView
        android:id="@+id/pay_confirm"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/white"
        android:background="@drawable/radius_fc4288_7"
        android:text="立即更新"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:lineSpacingExtra="2dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="23dp"/>
</LinearLayout>