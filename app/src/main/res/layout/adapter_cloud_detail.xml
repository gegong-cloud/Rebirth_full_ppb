<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="125dp">
        <com.google.android.mvp.ui.widget.SelectableRoundedImageView
            android:id="@+id/cloud_detail_img"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:src="@drawable/cloud_default_img"
            app:sriv_left_bottom_corner_radius="5dp"
            app:sriv_left_top_corner_radius="5dp"
            app:sriv_right_bottom_corner_radius="5dp"
            app:sriv_right_top_corner_radius="5dp"
            android:scaleType="centerCrop"
            />
        <ImageView
            android:id="@+id/my_favor"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="2dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/favor_nopress"
            android:scaleType="centerInside"
            />
    </RelativeLayout>


    <TextView
        android:id="@+id/cloud_detail_text"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:gravity="center"
        android:text="黑高跟水手制服大学生"
        android:textColor="@color/white"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="@dimen/sp_12" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp" />
</LinearLayout>