<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    >

    <ImageView
        android:id="@+id/history_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/login_checkbox_false"
        android:layout_marginTop="38dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:checked="false"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/history_img"
        android:layout_toRightOf="@+id/history_checkbox"
        android:layout_width="140dp"
        android:layout_height="89dp"
        android:scaleType="centerCrop"
        android:src="@drawable/cloud_default_img"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/history_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_alignTop="@+id/history_img"
        android:layout_toRightOf="@+id/history_img"
        android:layout_marginTop="1dp"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/font_78788E"
        android:maxLines="3"
        android:gravity="center|left"
        />

    <com.zhy.view.flowlayout.TagFlowLayout
        android:visibility="gone"
        android:id="@+id/history_tagflowlayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/history_img"
        android:layout_above="@+id/history_descirption"
        android:layout_below="@+id/history_title"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:paddingBottom="1dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="1dp"
        zhy:max_select="-1" />

    <TextView
        android:id="@+id/history_descirption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_alignBottom="@+id/history_img"
        android:layout_toRightOf="@+id/history_img"
        android:layout_marginBottom="2dp"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/font_78788E"
        android:singleLine="true"
        android:gravity="center|left"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>