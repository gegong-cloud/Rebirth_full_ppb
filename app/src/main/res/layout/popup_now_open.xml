<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_bg"
    android:layout_width="290dp"
    android:layout_height="wrap_content"
    android:background="@drawable/radius_ffffff_8"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/radius_fc4288_top_8"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/white"
            android:text="卡密充值"
            />
        <ImageView
            android:id="@+id/online_close"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:src="@drawable/white_close"
            android:scaleType="centerInside"
            />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/radius_ffffff_8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="卡密"
            android:textColor="@color/font_333333"
            android:textSize="@dimen/sp_18" />
        <View
            android:id="@+id/input_card_paste"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_marginLeft="70dp"
            />
        <EditText
            android:id="@+id/input_card_pwd"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="12dp"
            android:background="@android:color/transparent"
            android:gravity="center|left"
            android:hint="请输入您的卡密"
            android:singleLine="true"
            android:textIsSelectable="true"
            android:textColor="@color/font_333333"
            android:textColorHint="@color/line_dddddd"
            android:textSize="@dimen/sp_18" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/input_card_pwd"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="24dp"
            android:background="@color/font_cccccc" />

        <TextView
            android:id="@+id/vip_now_open"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/radius_fc4288_7"
            android:gravity="center"
            android:text="立即开通"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
</LinearLayout>