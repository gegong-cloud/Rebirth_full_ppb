<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="@drawable/radius_1e1e2d_6"
    android:orientation="vertical"
    android:layout_marginBottom="5dp"
    >
    <ImageView
        android:id="@+id/live_detail_img"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/live_detail_text"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/white"
        android:text="五姑娘"
        android:singleLine="true"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        />

    <TextView
        android:id="@+id/tv_room_looker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_black_tran40_circle"
        android:drawableLeft="@drawable/icon_renshu"
        android:drawablePadding="4dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:text="0"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:textSize="@dimen/sp_14"
        />
</RelativeLayout>