<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vip_bg"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginBottom="12dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:background="@drawable/radius_ffffff_dddddd_6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/vip_open"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/vip_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="视频月卡"
            android:textColor="@color/font_333333"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/vip_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="¥38.00"
            android:layout_marginLeft="10dp"
            android:textColor="@color/radius_fc4288"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/vip_old_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="¥39.00"
            android:layout_marginLeft="10dp"
            android:textColor="@color/font_999999"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>

    <TextView
        android:id="@+id/vip_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="视频区月度观影权"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/vip_open"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/font_999999"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/vip_open"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/radius_fc4288_15"
        android:gravity="center"
        android:text="开通"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />
</RelativeLayout>