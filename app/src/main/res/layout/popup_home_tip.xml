<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="363dp"
    android:background="@drawable/home_tip_bg">

    <TextView
        android:id="@+id/home_tip_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="104dp"
        android:gravity="center"
        android:maxLines="1"
        android:text="公告"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sp_20" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/home_tip_title"
        android:layout_marginBottom="40dp">

        <TextView
            android:id="@+id/home_tip_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="14dp"
            android:gravity="center|left"
            android:lineSpacingExtra="3dp"
            android:text="请大家记住我们的最新官网，以免出现后期卸载应用或者应用被封下载不了的情况！"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_14" />
    </android.support.v4.widget.NestedScrollView>

    <View
        android:id="@+id/home_tip_cancel"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="40dp" />
</RelativeLayout>