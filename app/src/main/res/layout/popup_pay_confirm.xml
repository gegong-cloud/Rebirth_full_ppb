<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="290dp"
    android:layout_height="wrap_content"
    android:background="@drawable/radius_ffffff_8"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/radius_fc4288_top_8"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/white"
            android:text="提示信息"
            />
        <ImageView
            android:visibility="gone"
            android:id="@+id/online_close"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:src="@drawable/white_close"
            android:scaleType="centerInside"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/font_999999"
            android:gravity="center|left"
            android:layout_marginLeft="20dp"
            android:text="订单号"
            />
        <TextView
            android:id="@+id/pay_number"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="match_parent"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/font_333333"
            android:gravity="center|left"
            android:text="1568545896248765"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/font_999999"
            android:gravity="center|left"
            android:layout_marginLeft="20dp"
            android:text="充值金额"
            />
        <TextView
            android:id="@+id/pay_money"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="match_parent"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/font_333333"
            android:gravity="center|left"
            android:text="30元"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/font_999999"
            android:gravity="center|left"
            android:layout_marginLeft="20dp"
            android:text="状态"
            />
        <TextView
            android:id="@+id/pay_status"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="match_parent"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/font_333333"
            android:gravity="center|left"
            android:text="支付确认中"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/pay_context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/font_999999"
        android:text="交易高峰期会存在“微信”充值延迟到账情况请您耐心等待片刻，智能预估本次支付到账时间约为1分钟
如等待超过10分钟后发现未到账情况，请联系客服寻求帮助。"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center|left"
        android:lineSpacingExtra="2dp"
        />

    <TextView
        android:id="@+id/pay_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/font_666666"
        android:text="支付确认中..."
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center|left"
        android:lineSpacingExtra="2dp"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="23dp"/>
</LinearLayout>