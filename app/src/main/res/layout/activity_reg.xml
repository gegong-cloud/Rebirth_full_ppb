<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.yanzhenjie.sofia.StatusView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" />

    <include layout="@layout/include_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_dddddd" />

    <EditText
        android:visibility="gone"
        android:id="@+id/reg_invite_code"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="23dp"
        android:background="@android:color/transparent"
        android:hint="请输入邀请码(选填)"
        android:singleLine="true"
        android:textColor="@color/font_333333"
        android:textColorHint="@color/font_cccccc"
        android:textSize="@dimen/sp_16" />

    <View
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/line_dddddd" />

    <EditText
        android:id="@+id/reg_phone"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="23dp"
        android:background="@android:color/transparent"
        android:hint="请输入手机号"
        android:inputType="phone"
        android:singleLine="true"
        android:textColor="@color/font_333333"
        android:textColorHint="@color/font_cccccc"
        android:textSize="@dimen/sp_16"

        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/line_dddddd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        >
        <EditText
            android:id="@+id/reg_code"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="15dp"
            android:background="@android:color/transparent"
            android:hint="请输入验证码"
            android:inputType="number"
            android:singleLine="true"
            android:textColor="@color/font_333333"
            android:textColorHint="@color/font_cccccc"
            android:textSize="@dimen/sp_16" />
        
        <TextView
            android:id="@+id/reg_get_code"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:background="@drawable/radius_fc4288_7"
            android:layout_marginRight="15dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            android:text="获取验证码"
            />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/line_dddddd" />

    <EditText
        android:id="@+id/pwd_new_pwd"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="15dp"
        android:background="@android:color/transparent"
        android:hint="请设置密码"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textColor="@color/font_333333"
        android:textColorHint="@color/font_cccccc"
        android:textSize="@dimen/sp_16" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/line_dddddd" />


    <TextView
        android:id="@+id/reg_ok"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/radius_fc4288_7"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="60dp"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/white"
        android:text="立即注册"
        android:gravity="center"
        />
</LinearLayout>

