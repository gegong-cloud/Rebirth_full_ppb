<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <com.zhouwei.mzbanner.MZBannerView
        android:id="@+id/home_banner"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="10dp"
        app:canLoop="true"
        app:indicatorAlign="center"
        app:indicatorPaddingBottom="50dp"
        app:indicatorPaddingLeft="1dp"
        app:indicatorPaddingRight="1dp"
        app:middle_page_cover="true"
        app:open_mz_mode="true" />

    <LinearLayout
        android:id="@+id/home_deng_bg"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:background="@color/bg_0e0e1a"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="12dp"
            android:src="@drawable/home_horn" />

        <com.marquee.dingrui.marqueeviewlib.MarqueeView
            android:id="@+id/home_menu_text_deng"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:marqueeview_repet_type="repet_continuous"
            app:marqueeview_text_color="@color/white"
            app:marqueeview_text_size="15"
            app:marqueeview_text_speed="2"/>
    </LinearLayout>

</LinearLayout>